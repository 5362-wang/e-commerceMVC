
@{
    ViewBag.Title = "Permit";
}

    <html>
    <head>
        <meta charset="utf-8">
        <title>Layui</title>
        <meta name="renderer" content="webkit">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        <link href="~/Content/LayUI/layui.css" rel="stylesheet" />
    </head>
    <body>

        <table class="layui-table">
            <thead id="tr">
                <tr>
                    <th >用户名</th>
                    <th>手机号</th>
                    <th>邮箱号</th>
                    <th>所属部门</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
            </thead>
        </table>
        <script src="~/Content/LayUI/layui.js"></script>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script>
            $(document).ready(function () {
                $.ajax({
                url: "GetUser",
                type: "POST",
                dataType: "Json",
                success: function (res) {
                    $.each(res.UserInfoList, function (index, item) {
                        var tr='<tr>'+
                                '<th>'+item.UserName+'</th>'+
                                '<th>'+item.Phone+'</th>'+
                                 '<th>'+item.Email+'</th>'+
                                 '<th>'+item.DepartmentName+'</th>'+
                               '<th>'+item.UserType+'</th>'+
                            '<th> <button type="button" onclick="compile('+item.Uid+')"  class="layui-btn">编辑</button>'+
                                '<button type="button" onclick="Delete('+item.Uid+')"  class="layui-btn">删除</button></th>' +
                            '</tr>'
                         $("#tr").append(tr);    
                    })
                    }
                })
            })
            function compile(res) {
                location.href= '/User/PersonalCenter/' + res;
            }
        </script>

    </body>
    </html>