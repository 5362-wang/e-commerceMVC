
@{
    Layout = null;
}

<!DOCTYPE html>

<table>
    <tr>
        <td>选择颜色：</td>
        <td><input id="Text1" type="text" /></td>
    </tr>
</table>
<input id="Button1" type="button" onclick="col()" value="添加颜色" />


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>

    function col() {
        var info = {
            Color: jQuery("#Text1").val(),
        }
        $.ajax({
            url: "/Commodity/CommodityColorAdd",
            type: "POST",
            dataType: "JSON",
            data: info,
            success: function (res) {
                if (res.ColorSuccess == true) {
                    alert("添加成功");
                }
                else {
                    alert("添加失败");
                }
            }
        })
    }




</script>